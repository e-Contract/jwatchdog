<?xml version="1.0" encoding="UTF-8"?>
<jwatchdog-config xmlns="be:e-contract:jwatchdog:1.0"
	sleep="10" notificationPrefix="e-contract.be: ">
	<datasource name="load-shortterm">
		<rrd:rrd xmlns:rrd="be:e-contract:jwatchdog:datasource:rrd:1.0"
			file="/opt/collectd/var/lib/collectd/rrd/e-contract.be/load/load.rrd"
			dataSourceName="shortterm" />
	</datasource>
	<datasource name="temp">
		<rrd:rrd xmlns:rrd="be:e-contract:jwatchdog:datasource:rrd:1.0"
			file="/opt/collectd/var/lib/collectd/rrd/e-contract.be/ipmi/temperature-Ambient Temp system_board (7.1).rrd" />
	</datasource>
	<datasource name="root">
		<rrd:rrd xmlns:rrd="be:e-contract:jwatchdog:datasource:rrd:1.0"
			file="/opt/collectd/var/lib/collectd/rrd/e-contract.be/df-root/df_complex-free.rrd" />
	</datasource>
	<datasource name="home">
		<rrd:rrd xmlns:rrd="be:e-contract:jwatchdog:datasource:rrd:1.0"
			file="/opt/collectd/var/lib/collectd/rrd/e-contract.be/df-home/df_complex-free.rrd" />
	</datasource>
	<datasource name="memory-used">
		<rrd:rrd xmlns:rrd="be:e-contract:jwatchdog:datasource:rrd:1.0"
			file="/opt/collectd/var/lib/collectd/rrd/e-contract.be/memory/memory-used.rrd" />
	</datasource>
	<datasource name="jboss-memory-used">
		<rrd:rrd xmlns:rrd="be:e-contract:jwatchdog:datasource:rrd:1.0"
			file="/opt/collectd/var/lib/collectd/rrd/e-contract.be/GenericJMX-memory_pool-CMS Old Gen/memory-used.rrd" />
	</datasource>
	<datasource name="jboss-perm-memory-used">
		<rrd:rrd xmlns:rrd="be:e-contract:jwatchdog:datasource:rrd:1.0"
			file="/opt/collectd/var/lib/collectd/rrd/e-contract.be/GenericJMX-memory_pool-CMS Perm Gen/memory-used.rrd" />
	</datasource>
	<datasource name="jboss-files">
		<rrd:rrd xmlns:rrd="be:e-contract:jwatchdog:datasource:rrd:1.0"
			file="/opt/collectd/var/lib/collectd/rrd/e-contract.be/GenericJMX-operating_system/gauge-OpenFileDescriptorCount.rrd" />
	</datasource>
	<datasource name="jboss-threads">
		<rrd:rrd xmlns:rrd="be:e-contract:jwatchdog:datasource:rrd:1.0"
			file="/opt/collectd/var/lib/collectd/rrd/e-contract.be/GenericJMX-threading/gauge-ThreadCount.rrd" />
	</datasource>
	<datasource name="idp-response-time">
		<rrd:rrd xmlns:rrd="be:e-contract:jwatchdog:datasource:rrd:1.0"
			file="/opt/collectd/var/lib/collectd/rrd/e-contract.be/curl-eid-idp/response_time.rrd" />
	</datasource>
	<notifier name="spryng">
		<spryng:spryng xmlns:spryng="be:e-contract:jwatchdog:notifier:spryng:1.0"
			username="replace_with_username" password="replace_with_password"
			destination="32478299492" sender="32478299492" route="BUSINESS" />
	</notifier>
	<notifier name="mail">
		<mail:mail xmlns:mail="be:e-contract:jwatchdog:notifier:mail:1.0"
			smtpServer="localhost" from="info@e-contract.be" to="info@e-contract.be" />
	</notifier>
	<notifier-group name="group">
		<notifier name="spryng" />
		<notifier name="mail" />
	</notifier-group>
	<trigger description="Load to high" datasource="load-shortterm"
		notifier="group">
		<condition>
			<above value="2.0" />
		</condition>
	</trigger>
	<trigger description="Temperature to high" datasource="temp"
		notifier="group">
		<condition>
			<above value="25" />
		</condition>
	</trigger>
	<trigger description="Root disk space to low" datasource="root"
		notifier="group">
		<condition>
			<below value="10737418240" />
		</condition>
	</trigger>
	<trigger description="Home disk space to low" datasource="home"
		notifier="group">
		<condition>
			<below value="10737418240" />
		</condition>
	</trigger>
	<trigger description="Used memory to high" datasource="memory-used"
		notifier="group">
		<condition>
			<above value="16106127360" />
		</condition>
	</trigger>
	<trigger description="JBoss used memory to high" datasource="jboss-memory-used"
		notifier="group">
		<condition>
			<above value="1610612736" />
		</condition>
	</trigger>
	<trigger description="JBoss used perm gen memory to high"
		datasource="jboss-perm-memory-used" notifier="group">
		<condition>
			<above value="419430400" />
		</condition>
	</trigger>
	<trigger description="JBoss open files to high" datasource="jboss-files"
		notifier="group">
		<condition>
			<above value="2048" />
		</condition>
	</trigger>
	<trigger description="JBoss threads to high" datasource="jboss-threads"
		notifier="group">
		<condition>
			<above value="512" />
		</condition>
	</trigger>
	<trigger description="eID IdP response time to high"
		datasource="idp-response-time" notifier="group">
		<condition>
			<script type="text/javascript">
				<![CDATA[
					function movingAverage(values, points) {
						var avgValues = new Array();
						for (idx = 0; idx < values.length - points + 1; idx++) {
							avgValues[idx] = 0;
							for (count = 0; count < points; count++) {
								avgValues[idx] += values[idx + count];
							}
							avgValues[idx] /= points;
						}
						return avgValues;
					}
					
					function main() {
						for (idx = 0; idx < values.length; idx++) {
							if (values[idx] > 2.0) {
								notifier.notify("eID IdP response time to high (peek)");
								return;
							}
	 					}
						
						var avgValues = movingAverage(values, 5);
						for (idx = 0; idx < avgValues.length; idx++) {
							if (avgValues[idx] > 1.0) {
								notifier.notify("eID IdP response time to high (avg)");	
								return;
							}
						}
					}
					
					main();
				]]>
			</script>
		</condition>
	</trigger>
</jwatchdog-config>
